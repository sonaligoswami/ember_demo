{{#if isShowingModal}}
{{#modal-dialog onClose="closeModel" onClickOverlay="openModel"
targetAttachment="center"
translucentOverlay=true}}
<button {{action "closeModel"}} class="close-btn">X</button>
<h2 style="text-align:center">Packages</h2>

<div class="popup-box">
{{#each packages as |package|}}
   <div class="columns">
      <ul class="price">
         <li class="header">{{package.name}}</li>
         <li class="grey">&#36; {{package.price}} / year</li>
         <li>{{package.description}}</li>
         <li class="grey"><a href="#" class="btn btn-warning">Buy</a></li>
      </ul>
   </div>
  {{/each}}
</div>

{{/modal-dialog}}
{{/if}}